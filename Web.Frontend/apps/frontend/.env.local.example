# Module Feature Flags
# Set to 'false' to disable a broken module and continue working
# This allows developers to isolate broken modules without being blocked

# Checklists Module
NEXT_PUBLIC_ENABLE_CHECKLISTS=true

# Incidents Module (future implementation)
NEXT_PUBLIC_ENABLE_INCIDENTS=true

# Assets Module (future implementation)
NEXT_PUBLIC_ENABLE_ASSETS=true

# Risk Assessment Module (future implementation)
NEXT_PUBLIC_ENABLE_RISK_ASSESSMENT=true

# Behaviour Module (future implementation)
NEXT_PUBLIC_ENABLE_BEHAVIOUR=true

# Documents Module (future implementation)
NEXT_PUBLIC_ENABLE_DOCUMENTS=true

# Example Usage:
# If the checklists module is broken and blocking your work:
# 1. Copy this file to .env.local
# 2. Set NEXT_PUBLIC_ENABLE_CHECKLISTS=false
# 3. Restart your dev server
# 4. You can now work on other modules while checklists is being fixed