{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start T100 Development Environment",
      "type": "shell",
      "command": "${workspaceFolder}/start-dev-environment.bat",
      "windows": {
        "command": "${workspaceFolder}\\start-dev-environment.bat"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": [],
