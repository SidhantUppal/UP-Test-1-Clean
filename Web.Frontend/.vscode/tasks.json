    },
    {
      "label": "Stop T100 Development Environment",
      "type": "shell",
      "command": "${workspaceFolder}/stop-dev-environment.bat",
      "windows": {
        "command": "${workspaceFolder}\\stop-dev-environment.bat"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "detail": "Stops all Docker containers"
    }
  ]
}