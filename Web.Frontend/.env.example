# =====================================================
# T100 PLATFORM ENVIRONMENT CONFIGURATION - EXAMPLE
# Copy this file to .env and update with your values
# Single source of truth for all services
# =====================================================

# Environment
NODE_ENV=development

# =====================================================
# DATABASE CONFIGURATION (Azure SQL Database)
# =====================================================
# Primary variable names
DB_HOST=your-database-server.database.windows.net
DB_PORT=1433
DB_NAME=V7-Dev
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_ENCRYPT=true
DB_TRUST_CERTIFICATE=true

# Alternative names (for compatibility)
DB_SERVER=your-database-server.database.windows.net
DB_TRUST_SERVER_CERTIFICATE=true

# =====================================================
# SERVICE PORTS
# =====================================================
# Email Service
EMAIL_SERVICE_PORT=3010
PORT=3010

# Incident Manager Service
INCIDENT_MANAGER_PORT=3014

# Sys Admin Service
SYS_ADMIN_PORT=3011

# =====================================================
# EMAIL SERVICE CONFIGURATION
# =====================================================
EMAIL_PROVIDER=smtp
CORS_ORIGIN=*
LOG_LEVEL=info

# Test Configuration
TEST_USER_AREA_ID=1
TEST_USER_ID=1
TEST_EMAIL=test@example.com

# SMTP Configuration (Default/Shared)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =====================================================
# SECURITY & AUTHENTICATION
# =====================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =====================================================
# API KEYS
# =====================================================
CLAUDE_API_KEY=your-claude-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =====================================================
# AZURE STORAGE
# =====================================================
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=documents

# =====================================================
# KEY VAULT CONFIGURATION
# =====================================================
KEY_VAULT_ENABLED=false
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/